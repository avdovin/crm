<h1>Listing crm_tasks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crm_tasks.each do |crm_task| %>
      <tr>
        <td><%= link_to 'Show', crm_task %></td>
        <td><%= link_to 'Edit', edit_crm_task_path(crm_task) %></td>
        <td><%= link_to 'Destroy', crm_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

